<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE log4j:configuration SYSTEM "/home/guru/hometask/src/main/resources/log4j.dtd">
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">

    <appender name="txt-out" class="org.apache.log4j.FileAppender">
        <param name="File" value="${catalina.home}/logs/hometask.log" />
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d  %5p  %C{1}:%L %m    at %l %n" />
        </layout>
        <filter class="org.apache.log4j.varia.LevelRangeFilter">
            <param name="LevelMax" value="error" />
            <param name="LevelMin" value="debug" />
            <param name="AcceptOnMatch" value="true" />
        </filter>
    </appender>

    <appender name="xml-out" class="org.apache.log4j.FileAppender">
        <param name="File" value="${catalina.home}/logs/hometask.xml" />
        <layout class="org.apache.log4j.xml.XMLLayout"/>
    </appender>

    <appender name="console-out" class="org.apache.log4j.ConsoleAppender">
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d  %5p  %C{1}:%L %m    at %l %n" />
        </layout>
        <filter class="org.apache.log4j.varia.LevelRangeFilter">
            <param name="LevelMax" value="debug" />
            <param name="LevelMin" value="info" />
            <param name="AcceptOnMatch" value="true" />
        </filter>
    </appender>
    <root>
        <level value="info" />
        <appender-ref ref="console-out" />
        <appender-ref ref="txt-out" />
        <appender-ref ref="xml-out" />
    </root>
</log4j:configuration>